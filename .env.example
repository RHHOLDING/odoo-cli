# ODOO CLI Configuration Example
# Copy this file to .env and fill in your values
# WARNING: Never commit .env to version control!

# Odoo Connection (Required)
ODOO_URL=https://your-instance.odoo.com
ODOO_DB=your-database-name
ODOO_USERNAME=your-username
ODOO_PASSWORD=your-password

# Optional Configuration
ODOO_TIMEOUT=30
ODOO_NO_VERIFY_SSL=false

# LLM-Friendly JSON Output (v1.4.1+)
# Enable this to get JSON output by default for all commands
# HIGHLY RECOMMENDED for LLM automation and scripting
ODOO_CLI_JSON=1

# Debug Mode (optional)
# ODOO_DEBUG=1
